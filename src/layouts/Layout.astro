---
import Button from '../components/Button.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/notion.svg" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#121212" />
    <meta name='robots' content='index, follow' />
    <title>{title}</title>
    <meta name="description" content="Curso de notion para creativos que quieren organizar su vida y su trabajo. Aprende a usar notion en tu vida y sácale el mayor partido">
    
    <meta property="og:title" content="Notion Venezuela - Notion para creativos." />
    <meta property="og:description" content="Curso de notion para creativos que quieren organizar su vida y su trabajo. Aprende a usar notion en tu vida y sácale el mayor partido">
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_VE" />
    <meta property="og:locale:alternate" content="es_ES" />
    <meta property="og:determiner" content="de">      
    
    <meta property="og:image" content="https://opengraph.githubassets.com/00bdf7756115de74b90dddb0879d7a41bd40f3a402853407ee8b45eba3dff5c3/RafidMuhymin/astro-imagetools">
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:alt" content="Imagen de la comunidad de Notion Venezuela.">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">

    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="github.com">
    <meta property="twitter:url" content="https://github.com/RafidMuhymin/astro-imagetools?tab=readme-ov-file#readme">
    <meta name="twitter:title" content="Notion Venezuela - Notion para creativos.">
    <meta name="twitter:description" content="Curso de notion para creativos que quieren organizar su vida y su trabajo. Aprende a usar notion en tu vida y sácale el mayor partido">
    <meta name="twitter:image" content="https://opengraph.githubassets.com/00bdf7756115de74b90dddb0879d7a41bd40f3a402853407ee8b45eba3dff5c3/RafidMuhymin/astro-imagetools">
  </head>

  <body>
    <header class="flex justify-between items-center px-4 py-4 tablet/sm:px-10 laptop/lg:px-[350px]">
      <div class="flex gap-2 items-center">
        <img src="/notion.svg" alt="notion icon" width="32" />
        <span class="font-semibold text-black-text font-inter"
          >Notion Venezuela</span
        >
      </div>
  
      <Button href="#" size="md">
        Entrar
      </Button>
    </header>

    <slot />
  </body>
</html>


<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Roboto&display=swap");
</style>
