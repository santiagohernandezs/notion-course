---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Arrow from "../components/icons/Arrow.astro";
import Menu from "../components/icons/Menu.astro";
import Navbar from "../components/Navbar.astro";
import Cube from "../components/icons/Cube.astro";
import Card from "../components/Card.astro";
import Users from "../components/Users.astro";
import Accsesible from "../components/icons/Accsesible.astro";
import CreditCard from "../components/icons/CreditCard.astro";
import Book from "../components/icons/Book.astro";
import Rating from "../components/Rating.astro";
---

<Layout title="Notion desde Cero.">
  <header class="flex justify-between items-center px-4 py-4 tablet/sm:px-10">
    <div class="flex gap-2 items-center">
      <img src="/notion.svg" alt="notion icon" width="32" />
      <span class="font-semibold text-black-text font-inter"
        >Notion Venezuela</span
      >
    </div>
    <button id="menu">
      <Menu class="" />
    </button>
    <!-- <Navbar /> -->
  </header>

  <main class="flex flex-col gap-14 py-7 relative h-auto px-4 tablet/sm:px-10 laptop/sm:px-72">
    <!-- Initial Hero -->
    <div class="flex flex-col items-center gap-4">
      <img src="/notion.svg" alt="notion icon" class="w-14 tablet/sm:w-20" />
      <div class="flex flex-col items-center gap-2">
        <h1
          class="text-4xl font-bold text-black-text font-inter tablet/sm:text-5xl"
        >
          Notion desde cero
        </h1>
        <span
          class="text-md text-center w-11/12 font-medium text-black-text opacity-95 leading-5 font-inter tablet/sm:text-lg"
          >Aprende a usar Notion para organizar tu vida y trabajo.</span
        >
      </div>
      <Button title="Ver lecciones" href="#">
        <Arrow slot="right" />
         Ver lecciones
      </Button>
    </div>

    <!-- Users list -->
    <div class="flex flex-col items-center gap-2">
      <Users />
      <span class="text-sm font-inter font-medium">
        + 42 personas están aprendiendo Notion.</span
      >

      <Rating />
    </div>

    <!-- About -->
    <div class="flex flex-col gap-4 tablet/sm:gap-6 bg-gray-200 p-4 rounded-xl items-center">
      <h2 class="text-2xl font-inter font-bold text-black-text text-center tablet/sm:text-3xl tablet/sm:w-4/5">
        Ayudando a contruir nuevas habilidades y experiencias.
      </h2>

      <img class="rounded-lg" src="/public/hr.png" alt="notion page">
    </div>
