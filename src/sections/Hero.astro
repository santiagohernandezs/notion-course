---
import Link from '../components/Link.astro'
import Rating from '../components/Rating.astro'
import Section from '../components/Section.astro'
import Users from '../components/Users.astro'
import Arrow from '../components/icons/Arrow.astro'
---

<Section styles='flex flex-col gap-14 mt-16 tablet/sm:mt-40'>
  <div class='flex flex-col items-center gap-8'>
    <div class='flex flex-col items-center gap-4'>
      <h1>
        <img
          src='/brand/LOGO-SIN-TAGLINE.webp'
          alt='InNotion'
          class='w-64 tablet/sm:w-[35rem] tablet/md:w-[40rem] drag-none'
        />
      </h1>
      <span
        class='w-full font-medium leading-5 text-center text-base font-inter text-black-text opacity-80 tablet/sm:text-2xl'
      >
        Potencia tu creatividad, construye tu futuro.
      </span>
    </div>
    <Link
      href='/inscribete'
      size='lg'
      text='white'
      content='Comenzar a aprender'
      aria-label='Comenzar a aprender y entra en el curso'
      hreflang='es-ES'
      styles={'transition duration-300 ease-in-out transform hover:scale-105 hover:bg-[#4D54E2] hover:shadow-xl hover:text-white-snow'}
    >
      <Arrow slot='right' />
    </Link>
  </div>

  <!-- Users list -->
  <div class='flex flex-col items-center gap-4'>
    <a
      class='text-black-text relative opacity-80 underline after:content-link after:absolute after:-right-5 text-center text-base font-inter font-medium'
      href='htt://javierrodriguez17.notion.site/Temario-c48c7fef102a4941baa7bbc6547a350a?pvs=4'
      >Ver el temario</a
    >
    <Users />
    <span class='text-sm font-medium font-inter tablet/sm:text-base'>
      + 42 personas est√°n aprendiendo Notion.</span
    >
    <Rating />
  </div>
</Section>
